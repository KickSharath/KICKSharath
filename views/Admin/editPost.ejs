<h3>Create New Post</h3>
<form action="/admin/edit/<%= posts.id %>?_method=PUT" enctype="multipart/form-data" class="mt-4 ml-4" method="POST">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" name="title" id="title" aria-describedby="titlehelp" value="<%= posts.title %>" placeholder="Enter Title">
        <!--<small id="titlehelp" class="form-text text-muted">We'll never share your email with anyone else.</small>-->
      </div>
      <div class="form-group">
        <label for="mainimg">Main Image</label>
        <input type="hidden" name="myimg" value="<%= posts.mainimg %>">
        <input type="file" class="form-control" name="mainimg" id="mainimg" aria-describedby="filehelp">
        <small id="filehelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="form-group">
        <label for="catto">Category</label>
        <select class="form-select form-control w-100" name="catto" id="catto">
          <option selected value="<%= posts.CategoryName %>"><%= posts.CategoryName %></option>
          <% category.forEach(category => { %>
          <option value="<%= category.CategoryName %>"> <%= category.CategoryName %> </option> 
          <% }) %>
        </select>
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" name="description" placeholder="Enter description"><%= posts.description %></textarea>
      </div>
      <input type="submit" class="btn btn-outline-success w-100" value="Submit">
</form>